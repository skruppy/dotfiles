#!/bin/bash

## Based on https://github.com/kepkin/dev-shell-essentials/blob/master/highlight.sh

declare -A fg_color_map
fg_color_map[black]=30
fg_color_map[red]=31
fg_color_map[green]=32
fg_color_map[yellow]=33
fg_color_map[blue]=34
fg_color_map[magenta]=35
fg_color_map[cyan]=36

fg_c=$(echo -e "\e[1;${fg_color_map[${2:-red}]}m")
c_rs=$'\e[0m'

exec sed -u s"/${1}/${fg_c}\0${c_rs}/g"
