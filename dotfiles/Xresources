!! Colors
URxvt.foreground:            White
URxvt.background:            Black
URxvt.color1:                #FF0000
URxvt.color2:                #00FF00
URxvt.color3:                #FFFF00
URxvt.color4:                #A0D0FF
URxvt.color5:                #FF00FF
URxvt.color6:                #00FFFF
URxvt.color12:               #6D98BF


!! Font
URxvt.font:                  xft:Droid Sans Mono Slashed Extra-7.5
Xcursor.theme:               Adwaita
Xcursor.size:                16


!! Scroll
!! Style: rxvt (default), plain (most compact), next, or xterm
!! Buffer size: max. 65535
URxvt.scrollstyle:           plain
URxvt.saveLines:             10000
URxvt.scrollBar_right:       true

URxvt.scrollTtyOutput:       false
URxvt.scrollTtyKeypress:     true
URxvt.scrollWithBuffer:      true

URxvt.secondaryWheel:        true


!! Icon
URxvt.iconFile:              /usr/share/icons/oxygen/16x16/apps/utilities-terminal.png
URxvt.urgentOnBell:          true


!! Open in browser
URxvt.perl-ext-common:       default,matcher,font-size
URxvt.url-launcher:          xdg-open


!! Open in editor
URxvt.matcher.button:        1
URxvt.matcher.pattern.1:     \\B(/\\S+?):(\\d+)(?=:|$)
URxvt.matcher.launcher.1:    kate -l $2 $1


!! Send escape character instead of something strange on meta keys (required for weechat and emacs)
!UXTerm.metaSendsEscape:      true
URxvt.metaSendsEscape:       true


!! Font size
URxvt.keysym.C-Up:           perl:font-size:increase
URxvt.keysym.C-Down:         perl:font-size:decrease
URxvt.keysym.C-S-Up:         perl:font-size:incglobal
URxvt.keysym.C-S-Down:       perl:font-size:decglobal
URxvt.keysym.C-0:            perl:font-size:reset


!! Disable Shift + Ctrl input (required for font size change shortcuts)
URxvt.iso14755:              false
URxvt.iso14755_52:           false


!! Emacs
URxvt.keysym.C-BackSpace:    \033[33~
URxvt.keysym.C-S-BackSpace:  \033[27;6;15~
